{% extends 'base.html.twig' %}

{% block title %}Affectation des Itineraires{% endblock %}

{% block body %}


<div class="table">
    <h1 style="margin-top: 5%;"> La liste des Chauffeur</h1>
    <table class="table table-bordered table-hover" style="margin-top: 3%;" >
        <tr style="background-color: darkblue">
            <th>ID</th>
            <th>NOM</th>
            <th>PRENOM</th>
            <th>TELEPHONE</th>
            <th>NUMERO PERMIS</th>
            <th>POSTE</th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.id}}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.numpermis}}</td>
                <td>{{ user.poste }}</td>
            </tr>
        {% endfor %}
    </table>


    <div class="container" style="margin-top: 4%">
        <h1 style="margin-bottom: 3%"> Affectation des Itineraires</h1>
        <div class="form-group">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-2">{{ form_row(form.horaire,{'attr':{'placeholder': 'Saisissez le prenom'}}) }}</div>
                <div class="col-md-3">{{ form_row(form.ligneBus,{'attr':{'placeholder': 'Saisissez le prenom'}}) }}</div>
                <div class="col-md-3">{{ form_row(form.user,{'label':'CHAUFFEUR'}) }}</div>
                <div class="col-md-3">{{ form_row(form.bus,{'label':'TYPE DE BUS'}) }}</div>

            </div>
            <button type="submit" class="btn btn-success" style="margin-top: 2%">Enregistrer</button>
            {{ form_end(form) }}
        </div>
        <a href="{{ path('moditine') }}">
        <div type="submit" class="btn btn-primary" style="margin-left: 80%;">Modifier les Itineraires</div>
        </a>
    </div>
{% endblock %}
